<table class="table table-bordered">
  
  <thead>
    <tr>
      <th>Rule</th>
      <th>Time Frame</th>
      <th>Raised</th>
      <th>Paid</th>
      <th>Have I paid or not?</th>
    </tr>
  </thead>

  <tbody>
  	<% @rules.each do |rule| %>
      <tr>
        <td><%= rule.name %></td>
        <% if rule.starting_date.nil? %>
        <td>Permanent</td>
        <% else %>
        <td><%= rule.starting_date %> - <%= rule.ending_date %></td>
        <% end %>
        <td>
        	$<%= rule.raised ? rule.raised : 0 %>
        </td>
        <td>
          $<%= rule.paid_amount %>
        </td>
        <td> 
          <% if !rule.paid? %>
            <%= link_to 'Yes, Iâ€™ve paid', pay_rule_path(rule), :method => :post %>
          <% else %>
        	 Paid
          <% end %>
        </td>
       </tr>
     <% end %>
   </tbody>
   </table>


